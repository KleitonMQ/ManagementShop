<head>
<link rel="stylesheet" href="~/css/ManageWorker.css" />
</head>

@model DonaMenina.Entities.Product

<body>
    <section>
        <div class="border-div">
            <h2 align="center">Editar Produto</h2>
            <form method="post" class="form-product" asp-action="EditProduct">
                <div>
                    <label for="">Código: @Model.ProductId</label>
                    <input name="ProductId" value="@Model.ProductId" hidden />
                </div>
                <div>
                    <input type="text" name="ProductName" placeholder="Nome do Produto" value="@Model.ProductName">
                    <input type="text" name="Brand" placeholder="Marca do Produto" value="@Model.Brand">
                </div>
                <div>
                    <label for="size">Tamanho: </label>
                    <select name="Size" id="size" readonly>
                        <option value="@Model.Size">@Model.Size</option>
                    </select>
                    <label for="price">Preço:</label>
                    <input type="text" name="Price" id="price" value="@Model.Price" readonly>
                </div>
                <div>
                    <label for="quantity">Quantidade em estoque: </label>
                    <input type="number" name="Quantity" id="quantity" value="@Model.Quantity" required>
                </div>
                <div class="buttons-align">
                    <a role="button" asp-action="ManageProducts" asp-controller="WorkSpace" class="button-a">Voltar</a>
                    <button type="submit">Atualizar</button>
                </div>
                
            </form>
        </div>
    </section>
    <div class="end-page">
    </div>
</body>