<head>
    <link rel="stylesheet" href="~/css/ManageWorker.css" />
</head>
@model DonaMenina.Entities.Product
<body>
    <section>
        <div class="border-div">
            <h2 align="center">Cadastrar Produtos</h2>
            <form method="post" class="form-product" asp-action="InsertProduct">
                <div>
                    <label for="">Código: </label>
                </div>
                <div>
                    <input type="text" name="ProductName" placeholder="Nome do Produto" required>
                    <input type="text" name="Brand" placeholder="Marca do Produto" required>
                </div>
                <div>
                    <label for="size">Tamanho: </label>
                    <select name="Size" id="size">
                        <option value="Unico">Único</option>
                        <option value="PP">PP</option>
                        <option value="P">P</option>
                        <option value="M">M</option>
                        <option value="G">G</option>
                        <option value="GG">GG</option>
                    </select>
                    <label for="price">Preço:</label>
                    <input type="text" name="Price" id="price" oninput="formatValue(this)" placeholder="0,00" required>
                </div>
                <div>
                    <label for="quantity">Quantidade em estoque: </label>
                    <input type="number" name="Quantity" id="quantity" required>
                </div>
                <div class="buttons-align">
                    <a role="button" asp-action="ManageProducts" asp-controller="WorkSpace" class="button-a">Voltar</a>
                    <button type="submit">Cadastrar</button>
                </div>
            </form>
        </div>
    </section>
    <div class="end-page">
    </div>
    <script src="~/js/site.js"></script>
</body>